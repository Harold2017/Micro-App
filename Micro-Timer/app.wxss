/**app.wxss**/
.hide {
  display: none!important;
}

.container,
input,
button {
  font: 14px "Helvetica Neue",
  "Hiragino Sans GB",
  "Microsoft YaHei",
  Arial,
  sans-serif;
}

.container {
  height: 100%;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.panel {
  background: #fff;
  border-radius: 3px;
  padding: 5px 10px;
} 

.nodata {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100%;
}

.nodata_img {
  display: block;
  width: 45px;
  height: 45px;
}

.nodata_text {
  color: #dedede;
  font-size: 12px;
  padding-left: 10px;
}
